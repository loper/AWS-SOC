{% extends('base.html.j2') %}

{% block content %}

<p class="h3">
    Security tools status
</p>

<hr/>

<div class="card">
<table class="table table-hover">
    <thead>
    <tr class="bg-info">
        {% for header in headers %}
            {% if header in ['status', 'tanium', 'qualys', 'splunk'] %}
                <th class="center"><a href="/sort={{ header }}">{{ header.upper() }}</a></th>
            {% else %}
                <th class="left"><a href="/sort={{ header }}">{{ header.upper() }}</a></th>
            {% endif %}
        {% endfor %}
    </tr>
    </thead>
    <tbody>
    {% for item in data %}
        <tr>
            {% for header in headers %}
                {% if header == 'status' %}
                    <td><div class="hs {{ item[header] }}"></div></td>

                {% elif header in ['tanium', 'qualys', 'splunk'] %}
                    <td class="center"><div class="status {{ 'green' if item[header] else 'red' }}"></div></td>
                {% elif header == 'qid' and item[header] == 0 %}
                    <td>-</td>
                {% else %}
                    <td>{{ item[header] }}</td>
                {% endif %}
            {% endfor %}
        </tr>
    {% endfor %}
    </tbody>
</table>
</div>

<hr/>

<div class="card">
<table class="table table-striped table-hover">
<thead>
<tr class="bg-info">
{% for header in qid_headers %}
<th>{{ header.upper() }}</th>
{% endfor %}
</tr>
</thead>
<tbody>
{% for item in qid_data %}
<tr>
{% for header in qid_headers %}
<td>{{ item[header] }}</td>
{% endfor %}
</tr>
{% endfor %}
</tbody>
</table>
</div>

{% endblock %}
